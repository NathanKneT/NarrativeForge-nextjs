{
  "extends": [
    "next/core-web-vitals"
  ],
  "rules": {
    "react/no-unescaped-entities": "off",
    "react/display-name": "off",
    "react-hooks/exhaustive-deps": "warn",
    "no-console": "warn",
    "no-unused-vars": "warn"
  },
  "ignorePatterns": [
    "__mocks__/**/*",
    "node_modules/**/*",
    ".next/**/*",
    "out/**/*",
    "dist/**/*",
    "coverage/**/*",
    "*.config.js",
    "*.config.mjs",
    "scripts/**/*",
    "src/__tests__/**/*"
  ]
}