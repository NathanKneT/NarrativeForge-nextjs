{
  "name": "asylum-interactive-story-nextjs",
  "version": "1.1.0",
  "private": true,
  "description": "Interactive storytelling platform with visual node-based editor",
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "lint:fix": "next lint --fix",
    "type-check": "tsc --noEmit",
    "format": "prettier --write \"src/**/*.{js,jsx,ts,tsx,json,css,md}\"",
    "format:check": "prettier --check \"src/**/*.{js,jsx,ts,tsx,json,css,md}\"",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:ci": "jest --ci --coverage --watchAll=false --passWithNoTests --reporters=default --silent",
    "test:e2e": "playwright test",
    "test:e2e:headed": "playwright test --headed",
    "test:e2e:debug": "playwright test --debug",
    "validate": "node scripts/validate-build.js",
    "validate:pre-build": "npm run lint && npm run type-check && npm run test:ci",
    "analyze": "cross-env ANALYZE=true npm run build",
    "lighthouse": "lhci autorun --config=./lighthouserc.js",
    "perf:audit": "npm run lighthouse",
    "clean": "rimraf .next out dist coverage test-results",
    "clean:all": "rimraf .next out dist coverage test-results node_modules/.cache",
    "deps:update": "ncu -u",
    "deps:check": "ncu",
    "docker:build": "docker build -t asylum-story .",
    "docker:run": "docker run -p 3000:3000 asylum-story",
    "docker:health": "docker run -p 3000:3000 --health-cmd='node healthcheck.js' --health-interval=30s --health-timeout=10s --health-retries=3 asylum-story",
    "build:production": "npm run validate:pre-build && npm run build && npm run validate"
  },
  "dependencies": {
    "@types/node": "^20",
    "@types/react": "^18",
    "@types/react-dom": "^18",
    "@xyflow/react": "^12.0.4",
    "framer-motion": "^10.16.16",
    "lucide-react": "^0.298.0",
    "next": "14.0.3",
    "react": "^18",
    "react-dom": "^18",
    "web-vitals": "^5.0.1",
    "zustand": "^4.4.7"
  },
  "devDependencies": {
    "@next/bundle-analyzer": "^14.2.29",
    "@playwright/test": "^1.40.0",
    "@swc/jest": "^0.2.38",
    "@testing-library/jest-dom": "^6.1.5",
    "@testing-library/react": "^14.1.2",
    "@testing-library/user-event": "^14.5.1",
    "@types/jest": "^29.5.8",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "autoprefixer": "^10.4.21",
    "cross-env": "^7.0.3",
    "eslint": "^8",
    "eslint-config-next": "14.0.3",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.1",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "jest-junit": "^16.0.0",
    "npm-check-updates": "^16.14.11",
    "postcss": "^8.5.3",
    "prettier": "^3.1.0",
    "prettier-plugin-tailwindcss": "^0.5.7",
    "rimraf": "^5.0.5",
    "tailwindcss": "^3.4.17",
    "typescript": "^5.3.3",
    "@lhci/cli": "^0.12.0",
    "wait-on": "^7.2.0"
  },
  "engines": {
    "node": ">=18.17.0",
    "npm": ">=9.0.0"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
